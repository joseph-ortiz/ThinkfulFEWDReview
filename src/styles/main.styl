@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

.bold
  font-weight: bold

// content styles

body
  background: #303030
  font-family: open sans, helvetica, arial, sans-serif
  font-weight: 300
  font-size: 18px
  color: #f0f0f0
  .gif
    color: rgba(255,255,255,0.8)


section
  background: #303030

h1
  font-size: 72px
  font-weight: 600
  line-height: 82px
  letter-spacing: -2px
  margin-bottom: 16px

h2
  font-weight: 300
  font-size: 42px
  letter-spacing: -1px
  margin-bottom: 8px
  color: #f0f0f0
  .bespoke-slide.light &
    color: rgba(0,0,0,0.6)

h3
  font-size: 24px
  font-weight: 300
  margin-bottom: 24px
  color: #e0e0e0
  .bespoke-slide.light &
    color: rgba(0,0,0,0.5)

hr
  visibility: hidden
  height: 20px

ul
  list-style: none

li
  margin-bottom: 12px

p
  margin: 0 100px 12px
  line-height: 22px

blockquote
  max-width: 75%

small
  font-size: 50%

a
  color: primary
  text-decoration: none
  &.black
    color: black
  .bespoke-slide.light &
    color: rgba(0,0,0,0.7)
  .bespoke-slide.light h1 &
    color: primary

.avatar
  display: block
  margin: 0 auto
  width: 120px
  height: 120px
  border-radius: 120px
  &--small
    width: 70px
    height: 70px

.logo
  background-position: center
  background-repeat: no-repeat
  &--gulp
    background-size: 25%
    background-image: url(../images/gulp.png)

.bespoke-slide
  background: none

.gif
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  &--fight
    background-image: url(../images/gif/fight.gif)
  &--omg-grunt
    background-image: url(../images/gif/yeaa.gif)
  &--omg-plugins
    background-image: url(../images/gif/bubbles.gif)
  &--cowboy-reaction
    background-image: url(../images/gif/demitri.gif)
  &--tools-happy
    background-image: url(../images/gif/neverending.gif)
  &--well-done
    background-image: url(../images/gif/slowclap.gif)
  &--gulp
    background-image: url(../images/gif/ryu.gif)
  &--less-code
    background-image: url(../images/gif/clap.gif)
  &--no
    background-image: url(../images/gif/no.gif)
  &--thats-it
    background-image: url(../images/gif/shigeru.gif)
  &--vinyl
    background-image: url(../images/gif/vinyl.gif)
  &--wrong-question
    background-image: url(../images/gif/no-answer.gif)
  &--orchestrator
    background-image: url(../images/gif/conductor.gif)
    background-size: 160%
    background-position: 50% -220px
  &--anger
    background-image: url(../images/gif/angry-amy.gif)
  &--gulp-is-awesome
    background-image: url(../images/gif/anchorman.gif)
  &--future
    background-image: url(../images/gif/future.gif)
  &--yoda
    background-image: url(../images/gif/yoda2.gif)
